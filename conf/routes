# SecureSocial
GET     /admin                      com.avyeyes.controllers.TemplateController.admin
GET     /login                      securesocial.controllers.LoginPage.login
GET     /logout                     securesocial.controllers.LoginPage.logout
GET     /authenticate/:provider     securesocial.controllers.ProviderController.authenticate(provider)
POST    /authenticate/:provider     securesocial.controllers.ProviderController.authenticateByPost(provider)

# Avalanche report
GET     /avalanche/newReportId      com.avyeyes.controllers.ReportController.newReportId
POST    /avalanche/:extId           com.avyeyes.controllers.ReportController.submitReport(extId)
PUT     /avalanche/:extId           com.avyeyes.controllers.ReportController.updateReport(extId, edit: Option[String])
DELETE  /avalanche/:extId           com.avyeyes.controllers.ReportController.deleteReport(extId)

# Avalanche search
GET     /avalanche/table            com.avyeyes.controllers.SearchController.tabularSearch(adminQuery: com.avyeyes.data.AvalancheTableQuery)
GET     /avalanche/search           com.avyeyes.controllers.SearchController.spatialSearch(query: com.avyeyes.data.AvalancheSpatialQuery, camAlt: Option[Double], camPitch: Option[Double], camLng: Option[Double], camLat: Option[Double])
GET     /avalanche/:extId           com.avyeyes.controllers.SearchController.find(extId, edit: Option[String])

# Images
POST    /avalanche/:extId/images/screenshot    com.avyeyes.controllers.ImageController.uploadScreenshot(extId)
POST    /avalanche/:extId/images               com.avyeyes.controllers.ImageController.upload(extId, edit: Option[String])
PUT     /avalanche/:extId/images/:filename     com.avyeyes.controllers.ImageController.caption(extId, filename, edit: Option[String])
PUT     /avalanche/:extId/images               com.avyeyes.controllers.ImageController.order(extId, edit: Option[String])
DELETE  /avalanche/:extId/images/:filename     com.avyeyes.controllers.ImageController.delete(extId, filename, edit: Option[String])

# Templates
GET     /                           com.avyeyes.controllers.TemplateController.index(extId = "")
GET     /:extId                     com.avyeyes.controllers.TemplateController.index(extId)

# Public assets
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)