# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Templates
GET     /                       com.avyeyes.controllers.TemplateController.index(extId = "")
GET     /:extId                 com.avyeyes.controllers.TemplateController.index(extId)
GET     /whodat                 com.avyeyes.controllers.TemplateController.admin

# Public assets
GET     /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)

# Avalanches
GET   /avalanche/:extId             com.avyeyes.controllers.AvalancheController.find(extId)
GET   /avalanche/details/:extId     com.avyeyes.controllers.AvalancheController.details(extId, edit: Option[String])
