# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# SecureSocial
GET     /admin                      com.avyeyes.controllers.TemplateController.admin
GET     /login                      securesocial.controllers.LoginPage.login
GET     /logout                     securesocial.controllers.LoginPage.logout
GET     /authenticate/:provider     securesocial.controllers.ProviderController.authenticate(provider)
POST    /authenticate/:provider     securesocial.controllers.ProviderController.authenticateByPost(provider)

# Avalanches
GET   /avalanche/table              com.avyeyes.controllers.AvalancheController.table(adminQuery: com.avyeyes.data.AdminAvalancheQuery)
GET   /avalanche/:extId             com.avyeyes.controllers.AvalancheController.find(extId)
GET   /avalanche/details/:extId     com.avyeyes.controllers.AvalancheController.details(extId, edit: Option[String])

# Images
POST    /image/:extId/screenshot    com.avyeyes.controllers.ImageController.uploadScreenshot(extId)
POST    /image/:extId               com.avyeyes.controllers.ImageController.upload(extId, edit: Option[String])
PUT     /image/:extId/:filename     com.avyeyes.controllers.ImageController.caption(extId, filename, edit: Option[String])
PUT     /image/:extId               com.avyeyes.controllers.ImageController.order(extId, edit: Option[String])
DELETE  /image/:extId/:filename     com.avyeyes.controllers.ImageController.delete(extId, filename, edit: Option[String])

# Templates
GET     /                           com.avyeyes.controllers.TemplateController.index(extId = "")
GET     /:extId                     com.avyeyes.controllers.TemplateController.index(extId)

# Public assets
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)