commands:
  set_time_zone:
    command: ln -f -s /usr/share/zoneinfo/America/Denver /etc/localtime

container_commands:
  01_copy_ssl_certs:
    command: sudo cp conf/avyeyes.crt /etc/pki/tls/certs
    command: sudo cp conf/avyeyes.key /etc/pki/tls/certs
  02_restart_nginx:
    command: sudo service nginx restart